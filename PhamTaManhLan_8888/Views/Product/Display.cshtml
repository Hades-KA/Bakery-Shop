@model PhamTaManhLan_8888.Models.Product

@{
    var returnUrl = Context.Request.Query["returnUrl"];
}

<div class="card shadow-sm p-4">
    <div class="row">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
                    <div class="col-md-4 text-center">
                        <img src="@Model.ImageUrl" alt="@Model.Name"
                             class="img-fluid rounded border border-2 border-dark shadow-sm"
                             style="max-width: 100%;">
                    </div>
        }

        <div class="col-md-8">
            <h2 class="text-primary">@Model.Name</h2>
            <h4 class="text-danger">Giá: @Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</h4>
            <p class="text-muted">@Model.Description</p>

            <!-- Nút quay lại -->
            <a href="@(string.IsNullOrEmpty(returnUrl) ? Url.Action("Index", "Home") : returnUrl)"
               class="btn btn-secondary mt-3">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
