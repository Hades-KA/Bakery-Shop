@model dynamic

<h2>Chi tiết đơn hàng #@Model.Id</h2>
<p><strong>Ngày đặt:</strong> @Model.OrderDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Tổng tiền:</strong> @Model.TotalPrice.ToString("N0") VND</p>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("N0") VND</td>
                <td>@(item.Quantity * item.Price) VND</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-secondary" asp-action="OrderHistory">Quay lại</a>
